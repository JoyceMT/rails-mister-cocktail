    <h1><center><strong>COCKTAILS</strong></center></h1>
  </div>
</div>

<br/>

<div class="container mt-3">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= cocktail.name %></h4>
            </div>
          <div class="flat-card-actions">
            <td><%= link_to 'Show', cocktail %></td>
            <%= link_to 'Edit', edit_cocktail_path(cocktail), class: 'ml-3 text-warning' %>
            <%= link_to "Remove", cocktail,
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: 'ml-3 text-danger'
            %>
          </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
